  "assets": {
    "css": [
      "styles/login.css",
      "styles/dashboard.css", 
      "styles/facial-recognition.css",
      "styles/cases.css",
      "styles/location.css"
    ],
    "js": [
      "scripts/login.js",
      "scripts/dashboard.js",
      "scripts/facial-recognition.js", 
      "scripts/cases.js",
      "scripts/location.js"
    ],
    "fonts": [
      "https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700&display=swap"
    ],
    "external": []
  },
  "wixSettings": {
    "ssl": true,
    "compression": true,
    "caching": {
      "enabled": true,
      "duration": "1d"
    },
    "minification": {
      "css": true,
      "js": true,
      "html": false
    },
    "analytics": {
      "googleAnalytics": "G-XXXXXXXXXX",
      "googleTagManager": "GTM-XXXXXXX"
    },
    "performance": {
      "lazyLoading": true,
      "imageOptimization": true,
      "preloading": ["fonts", "critical-css"]
    }
  },
  "security": {
    "headers": {
      "X-Frame-Options": "SAMEORIGIN",
      "X-Content-Type-Options": "nosniff",
      "X-XSS-Protection": "1; mode=block",
      "Referrer-Policy": "strict-origin-when-cross-origin"
    },
    "authentication": {
      "loginRequired": ["dashboard", "facial-recognition", "cases", "location"],
      "sessionTimeout": 3600,
      "maxLoginAttempts": 3
    }
  },
  "backup": {
    "files": [
      "index.html",
      "dashboard.html", 
      "facial-recognition.html",
      "cases.html",
      "location.html",
      "styles/",
      "scripts/",
      "sitemap.xml",
      "robots.txt"
    ],
    "database": [],
    "frequency": "daily"
  },
  "monitoring": {
    "uptime": true,
    "performance": true,
    "errors": true,
    "userActivity": true
  },
  "deployment": {
    "environment": "production",
    "version": "1.0.0",
    "lastUpdate": "2024-01-15",
    "deployedBy": "Scarlet Red Solutions",
    "rollbackPlan": "backup-restore"
  }
